$default  = sorta([$a, $b, $c]);
$reverse  = sorta([$a, $b, $c],  "r");
$numup    = sorta([$a, $b, $c],  "n");
$numdown  = sorta([$a, $b, $c],  "nr");
$lexup    = sorta([$a, $b, $c],  "f");
$lexdown  = sorta([$a, $b, $c],  "fr");
$foldup   = sorta([$a, $b, $c],  "c");
$folddown = sorta([$a, $b, $c],  "cr");
