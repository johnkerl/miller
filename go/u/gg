#!/bin/bash

path_to_mlr="./mlr"
indir="./regtest/input"

#go build mlr.go
if [ $? -ne 0 ]; then
  exit 1
fi

# ----------------------------------------------------------------
run_mlr() {
  echo
  echo ---------------------------------------------------------------- "$@"
  echo $path_to_mlr "$@"
  echo
  $path_to_mlr "$@"
}

# ----------------------------------------------------------------
mlr_expect_fail() {
  echo
  echo $path_to_mlr "$@"
  echo
  $path_to_mlr "$@"
  status=$?
  if [ $status -eq 0 ]; then
    echo "failed to fail"
  fi
}

# ----------------------------------------------------------------
run_cat() {
  echo
  echo cat "$@"
  echo
  cat "$@"
}

# ----------------------------------------------------------------
announce() {
  echo
  echo "================================================================"
  echo
  echo "$@"
}

# ----------------------------------------------------------------
mention() {
  echo
  echo ---------------------------------------------------------------- "$@"
}

# ================================================================

echo x=1 | ../c/mlr  merge-fields -a min -f x -o foo
echo x=1 | ../go/mlr merge-fields -a min -f x -o foo
echo y=1 | ../c/mlr  merge-fields -a min -f x -o foo
echo y=1 | ../go/mlr merge-fields -a min -f x -o foo

# ================================================================
